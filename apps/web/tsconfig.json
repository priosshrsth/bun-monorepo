{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "src/*": ["./src/*"],
      "env/*": ["./env/*"],
      "prisma": ["./prisma/index"],
      "components/*": ["./src/components/*"],
      "features/*": ["./src/features/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.tsx",
    "**/*.ts",
    ".next/types/**/*.ts",
    "app.d.ts",
    "src/proxy.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
